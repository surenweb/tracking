<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="3dp" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="right"
                android:text="Case Title : "               
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/txtCaseTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="Enter Case Name"
                android:imeOptions="flagNoExtractUi" />

        </TableRow>
        
         <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            	
            	<TextView
                android:text="Patrol Type : "                 
                android:gravity="right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"               
                android:textAppearance="?android:attr/textAppearanceMedium" />
            	
				<Spinner android:id="@+id/spinPatrolType"  
			    android:drawSelectorOnTop="true" 
			    android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"              
                android:imeOptions="flagNoExtractUi" />
				
		 </TableRow>
		 
         <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            	
            	<TextView
            	android:text="Patrol On : "
            	android:gravity="right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"               
                android:textAppearance="?android:attr/textAppearanceMedium" />        
            	
				<Spinner android:id="@+id/spinPatrolOn"  			   
			    android:drawSelectorOnTop="true" 
			    android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"              
                android:imeOptions="flagNoExtractUi" />
				
		 </TableRow>
		 
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        </TableRow>
        
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="right"
                android:text="Total Troops : "
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/txtTotalTroops"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:imeOptions="flagNoExtractUi"
                android:inputType="numberSigned" />

        </TableRow>
        
    </TableLayout>

    <Button
        android:id="@+id/btnStartPatrol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Start" />

</LinearLayout>