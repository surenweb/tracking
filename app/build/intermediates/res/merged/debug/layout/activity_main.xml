<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btnOld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Previous Data"
        android:layout_above="@+id/btnSetting"
        android:layout_alignLeft="@+id/btnSetting"
        android:layout_alignStart="@+id/btnSetting"
        android:layout_alignRight="@+id/btnSetting"
        android:layout_alignEnd="@+id/btnSetting" />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:layout_below="@+id/btnSetting"
        android:layout_alignLeft="@+id/btnSetting"
        android:layout_alignStart="@+id/btnSetting"
        android:layout_alignRight="@+id/btnSetting"
        android:layout_alignEnd="@+id/btnSetting" />

    <Button
        android:id="@+id/btnPatrol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Patrol"
        android:layout_above="@+id/btnEvent"
        android:layout_alignLeft="@+id/btnEvent"
        android:layout_alignStart="@+id/btnEvent"
        android:layout_alignRight="@+id/btnEvent"
        android:layout_alignEnd="@+id/btnEvent" />

    <Button
        android:id="@+id/btnEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event"
        android:layout_above="@+id/btnOld"
        android:layout_alignLeft="@+id/btnOld"
        android:layout_alignStart="@+id/btnOld"
        android:layout_alignRight="@+id/btnOld"
        android:layout_alignEnd="@+id/btnOld" />

    <Button
        android:id="@+id/btnSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="       Setting       "
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:singleLine="true" />

    <TextView
        android:id="@+id/lblMainServer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Server : "
        android:textSize="12dp" />

    <TextView
        android:id="@+id/lblMainMobileID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lblMainServer"
        android:layout_alignLeft="@+id/lblMainServer"
        android:text="Mobile ID : " />

</RelativeLayout>
